# App
APP_ENV=dev

# Database (Railway auto-generates this)
DATABASE_URL=postgresql://postgres:dkssud114@localhost:5432/portfolio

# GitHub
# Token needs 'repo' scope to access private repositories
# Create at: https://github.com/settings/tokens/new (select 'repo' scope)
GITHUB_TOKEN=ghp_your_token_here
GITHUB_USERNAME=heishia

# CORS
CORS_ORIGINS=http://localhost:5173

# API Security (optional)
API_SECRET=admin123

# Frontend (for Vite)
VITE_API_URL=http://localhost:8000

# Railway Bucket (S3 compatible storage)
# Railway에서 Bucket 생성 후 Credentials 탭에서 확인
BUCKET_ENDPOINT=https://storage.railway.app
BUCKET_ACCESS_KEY_ID=your_access_key_id
BUCKET_SECRET_ACCESS_KEY=your_secret_access_key
BUCKET_NAME=your-bucket-name-xxxxx
BUCKET_PUBLIC_URL=https://s3-public-presigner-xxx.up.railway.app

# Discord Webhook (for notifications)
# Discord 서버 설정 > 연동 > 웹후크 > 새 웹후크 에서 URL 복사
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Google Cloud / Vertex AI
# GCP 프로젝트 ID와 서비스 계정 키 경로 설정
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=asia-northeast3
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
